<div class="ui-date-time-input grid grid-cols-2 gap-2" ...attributes> 
    <Input @type="date" @value={{this.date}} min={{@minDate}} @max={{@maxDate}} @input={{fn this.update "date"}} class="border-0 m-0 p-0 bg-transparent" />
    <Input @type="time" @value={{this.time}} min={{@minTime}} @max={{@maxTime}} @input={{fn this.update "time"}} class="border-0 m-0 p-0 bg-transparent" />
</div>